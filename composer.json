{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.11",
        "guzzlehttp/guzzle": "^7.5",
        "http-interop/http-factory-guzzle": "^1.0",
        "smartassert/digitalocean-droplet-configuration": "^1.2",
        "smartassert/health-check-bundle": "^2.0",
        "smartassert/users-security-bundle": "^6.0",
        "symfony/console": "6.3.*",
        "symfony/doctrine-messenger": "6.3.*",
        "symfony/dotenv": "6.3.*",
        "symfony/flex": "^2.1",
        "symfony/framework-bundle": "6.2.*",
        "symfony/messenger": "6.3.*",
        "symfony/monolog-bundle": "^3.6",
        "symfony/proxy-manager-bridge": "6.3.*",
        "symfony/security-bundle": "6.3.*",
        "symfony/uid": "6.3.*",
        "symfony/yaml": "6.2.*",
        "toin0u/digitalocean-v2": "^4.5"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-symfony": "^1.2",
        "phpunit/phpunit": "^9.5",
        "smartassert/symfony-test-client": "^0.1.0",
        "smartassert/users-client": "*",
        "squizlabs/php_codesniffer": "dev-master",
        "symfony/browser-kit": "6.2.*",
        "symfony/maker-bundle": "^1.29",
        "symfony/phpunit-bridge": "^6.0",
        "webignition/object-reflector": "^1.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "db-setup": [
            "php bin/console doctrine:database:create --if-not-exists --quiet",
            "php bin/console doctrine:migrations:migrate --no-interaction --quiet --allow-no-migration"
        ],
        "db-destroy": [
            "php bin/console doctrine:database:drop --force"
        ],
        "cs-fixer-dry-run": "docker run --rm $(if [ ! -z \"${NO_TTY}\" ]; then echo \"\"; else echo \"-t\"; fi) -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "docker run --rm $(if [ ! -z \"${NO_TTY}\" ]; then echo \"\"; else echo \"-t\"; fi) -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --diff",
        "cs-phpcs": "XDEBUG_MODE=off ./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "XDEBUG_MODE=off ./vendor/bin/phpstan analyse --ansi",
        "test-unit": "XDEBUG_MODE=off ./vendor/bin/phpunit --colors=always tests/Unit",
        "test-functional": "XDEBUG_MODE=off ./vendor/bin/phpunit --colors=always tests/Functional",
        "test-integration-unauthorized-user": [
            "XDEBUG_MODE=off ./vendor/bin/phpunit tests/Integration/UnauthorizedUserTest.php"
        ],
        "test-integration-machine-creation": [
            "XDEBUG_MODE=off ./vendor/bin/phpunit tests/Integration/MachineCreationTest.php"
        ],
        "test-integration-health-check": [
            "XDEBUG_MODE=off ./vendor/bin/phpunit tests/Integration/HealthCheckTest.php"
        ],
        "test-integration-status": [
            "XDEBUG_MODE=off ./vendor/bin/phpunit tests/Integration/StatusTest.php"
        ],
        "test-integration": [
            "@test-integration-unauthorized-user",
            "@test-integration-status",
            "@test-integration-machine-creation",
            "@test-integration-health-check"
        ],
        "test": [
            "@test-unit",
            "@test-functional"
        ],
        "functional-start": "docker-compose -f ./tests/build/docker-compose.yml up -d postgres users-service users-http",
        "functional-status": "docker-compose -f ./tests/build/docker-compose.yml ps postgres users-service users-http",
        "functional-teardown": "docker-compose -f ./tests/build/docker-compose.yml down",
        "functional-setup": [
            "@functional-start",
            "sleep 2",
            "@db-setup",
            "@messenger-setup",
            "@users-setup"
        ],
        "users-db-setup": [
            "docker-compose -f tests/build/docker-compose.yml exec -T users-service php bin/console doctrine:database:create --if-not-exists",
            "docker-compose -f tests/build/docker-compose.yml exec -T users-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration"
        ],
        "users-generate-jwt-keys": "docker-compose -f tests/build/docker-compose.yml exec -T users-service php bin/console lexik:jwt:generate-keypair --overwrite --no-interaction",
        "users-create-user": [
            "curl --header 'Authorization: primary_admin_token' --data 'email=user@example.com&password=password' http://localhost:9080/admin/user/create",
            ""
        ],
        "users-setup": [
            "@users-db-setup",
            "@users-generate-jwt-keys",
            "@users-create-user"
        ],
        "integration-pull": "docker-compose -f tests/build/docker-compose.yml pull",
        "integration-build": "docker-compose -f tests/build/docker-compose.yml build app",
        "integration-up": "docker-compose -f tests/build/docker-compose.yml up -d",
        "integration-status": "docker-compose -f tests/build/docker-compose.yml ps",
        "integration-stop": "docker-compose -f tests/build/docker-compose.yml stop",
        "integration-teardown": "@functional-teardown",
        "integration-setup": [
            "@integration-build",
            "@integration-up",
            "sleep 2",
            "@db-setup",
            "@users-setup"
        ],
        "messenger-setup": "php bin/console messenger:setup-transports",
        "messenger-listen": "php bin/console messenger:consume async -vv",
        "ci": [
            "@cs",
            "@static-analysis",
            "@test"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.3.*"
        }
    }
}
